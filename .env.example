# =============================================================================
# JSON Resume Environment Variables
# =============================================================================
# Copy this file to `.env.local` and fill in your actual values
# DO NOT commit .env.local to version control

# -----------------------------------------------------------------------------
# Database Configuration
# -----------------------------------------------------------------------------
# Prisma database connection strings
DATABASE_URL=prisma://accelerate.prisma-data.net/?api_key=YOUR_ACCELERATE_API_KEY
DATABASE_URL_RAW=postgresql://USER:PASSWORD@HOST:PORT/DATABASE?sslmode=require

# -----------------------------------------------------------------------------
# Authentication (NextAuth.js)
# -----------------------------------------------------------------------------
# Generate a secret: `openssl rand -base64 32`
AUTH_SECRET=your_auth_secret_here

# GitHub OAuth App credentials
# Create at: https://github.com/settings/developers
AUTH_GITHUB_ID=your_github_client_id
AUTH_GITHUB_SECRET=your_github_client_secret

# GitHub Personal Access Token (for API operations)
# Create at: https://github.com/settings/tokens
GITHUB_TOKEN=your_github_personal_access_token

# -----------------------------------------------------------------------------
# Supabase Configuration
# -----------------------------------------------------------------------------
# Find at: https://app.supabase.com/project/YOUR_PROJECT/settings/api
NEXT_PUBLIC_SUPABASE_URL=https://YOUR_PROJECT.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_KEY=your_supabase_service_role_key

# -----------------------------------------------------------------------------
# AI / ML Services
# -----------------------------------------------------------------------------
# OpenAI API Key - for AI features, embeddings, chat
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key

# Pinecone Vector Database - for job matching and similarity
# Get from: https://app.pinecone.io/
PINECONE_API_KEY=your_pinecone_api_key
PINECONE_ENVIRONMENT=your_pinecone_environment

# Perplexity AI - for company data enrichment
# Get from: https://www.perplexity.ai/settings/api
PERPLEXITY_API_KEY=your_perplexity_api_key

# -----------------------------------------------------------------------------
# Application Configuration
# -----------------------------------------------------------------------------
# Application URL (for OAuth callbacks and links)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Node environment
NODE_ENV=development

# Vercel environment (development, preview, production)
VERCEL_ENV=development

# -----------------------------------------------------------------------------
# Development & Testing
# -----------------------------------------------------------------------------
# CI flag (set by GitHub Actions, leave empty for local dev)
CI=

# Turbo remote cache (optional, for faster builds)
TURBO_TOKEN=
TURBO_TEAM=

# Testing flag (optional, used in some scripts)
TOT=
